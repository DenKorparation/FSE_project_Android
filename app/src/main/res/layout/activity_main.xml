<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/gray">

    <TextView
            android:text="@string/logo"
            android:layout_width="match_parent"
            android:layout_marginTop="50sp"
            android:layout_height="wrap_content" android:id="@+id/logo" android:textAlignment="center"
            android:textColor="@color/white" android:textSize="30sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/hint"
            android:textColor="@color/white"
            android:textColorHint="@color/TextColorHint"
            android:layout_below="@id/logo"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="100sp"
            android:layout_marginHorizontal="50sp"
            android:ems="10"
            android:id="@+id/user_field"/>
    <Button
            android:text="@string/main_btn"
            android:layout_width="match_parent"
            android:layout_below="@id/user_field"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/main_button"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="130sp"
            android:backgroundTint="@color/teal_200"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="50sp"
            android:layout_height="wrap_content" android:id="@+id/result_info" android:textAlignment="center"
            android:layout_below="@id/main_button"
            android:textColor="@color/TextColorHint" android:textSize="25sp"/>
</RelativeLayout>