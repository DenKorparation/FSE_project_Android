<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/backgro"
        android:backgroundTintMode="screen"
        android:backgroundTint="#0F061E">



    <TextView
            android:text="@string/logo"
            android:layout_width="match_parent"
            android:layout_marginTop="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/hint"
            android:textColor="@color/black_shade_1"
            android:textColorHint="@color/black_shade_1"
            android:layout_below="@id/logo"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="50sp"
            android:ems="10"
            android:id="@+id/user_field"
            android:fontFamily="sans-serif-black"/>

    <Button
            android:text="@string/main_btn"
            android:layout_width="match_parent"
            android:layout_below="@id/user_field"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/main_button"
            android:layout_marginTop="17dp"
            android:layout_marginHorizontal="130sp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="sans-serif-black"/>

    <TextView

            android:layout_width="156dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="226dp"
            android:id="@+id/textView"/>


</RelativeLayout>